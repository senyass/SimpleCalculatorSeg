<resources>

    <!-- Base Calculator Button Style -->
    <style name="CalcButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">26sp</item>
        <item name="android:backgroundTint">#333333</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="CalcButtonDark" parent="CalcButtonBase">
        <item name="android:backgroundTint">#333333</item>
    </style>

    <style name="CalcButtonGray" parent="CalcButtonBase">
        <item name="android:backgroundTint">#A5A5A5</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalcButtonOrange" parent="CalcButtonBase">
        <item name="android:backgroundTint">#FF9500</item>
    </style>

</resources>